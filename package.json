  "version": "1.0.0",
  "description": "Checking Image files file format",
  "main": "src/index.ts",
  "watch": {
    "build": {
      "patterns": ["src/**/*.{ts,tsx}", "build.js"],
      "extensions": "ts,tsx,js",
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "build": "node build.js",
    "dev": "npm-watch"
