  "repository": {
    "type": "git",
    "url": "git+https://github.com/zbyso23/image-file-checker.git"
  },
  "author": "Zbysek Lipka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zbyso23/image-file-checker/issues"
  },
  "homepage": "https://github.com/zbyso23/image-file-checker#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/node": "^20.12.12",
    "npm-watch": "^0.13.0",
    "ts-node": "^10.9.2"
  }
}
